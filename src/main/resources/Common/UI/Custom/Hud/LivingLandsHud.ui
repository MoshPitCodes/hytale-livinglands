// Living Lands HUD - Text-based progress bars with aligned layout
// Reference: https://github.com/trouble-dev/hytale-basic-uis

// === Metabolism HUD (always visible - top left corner) ===
Group #LivingLandsHud {
  LayoutMode: Top;
  Anchor: (Top: 16, Left: 16, Width: 280, Height: 140);

  // Hunger row - label and bar aligned
  Group #HungerRow {
    LayoutMode: Left;
    Anchor: (Height: 18);

    Label #HungerName {
      Text: "Hunger";
      Anchor: (Width: 55, Height: 18);
      Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #e67e22, RenderBold: true);
    }

    Label #HungerBar {
      Text: "";
      Anchor: (Width: 225, Height: 18);
      Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #e67e22);
    }
  }

  // Thirst row - label and bar aligned
  Group #ThirstRow {
    LayoutMode: Left;
    Anchor: (Height: 18, Top: 2);

    Label #ThirstName {
      Text: "Thirst";
      Anchor: (Width: 55, Height: 18);
      Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #5dade2, RenderBold: true);
    }

    Label #ThirstBar {
      Text: "";
      Anchor: (Width: 225, Height: 18);
      Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #5dade2);
    }
  }

  // Energy row - label and bar aligned
  Group #EnergyRow {
    LayoutMode: Left;
    Anchor: (Height: 18, Top: 2);

    Label #EnergyName {
      Text: "Energy";
      Anchor: (Width: 55, Height: 18);
      Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #f4d03f, RenderBold: true);
    }

    Label #EnergyBar {
      Text: "";
      Anchor: (Width: 225, Height: 18);
      Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #f4d03f);
    }
  }

  // Spacer
  Group { Anchor: (Height: 6); }

  // Active Effects section (buffs/debuffs)
  // Buffs use #BuffN (violet), Debuffs use #DebuffN (red)
  Group #ActiveEffects {
    LayoutMode: Top;
    Anchor: (Height: 72);

    Label #Buff1 {
      Text: "";
      Anchor: (Height: 16);
      Style: (FontSize: 10, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #9b59b6);
    }

    Label #Buff2 {
      Text: "";
      Anchor: (Height: 16);
      Style: (FontSize: 10, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #9b59b6);
    }

    Label #Debuff1 {
      Text: "";
      Anchor: (Height: 16);
      Style: (FontSize: 10, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #e74c3c);
    }

    Label #Debuff2 {
      Text: "";
      Anchor: (Height: 16);
      Style: (FontSize: 10, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #e74c3c);
    }
  }
}

// XP Gain notification (right side of metabolism bars, aligned vertically)
Group #XpNotification {
  LayoutMode: Top;
  Anchor: (Top: 16, Left: 310, Width: 180, Height: 55);
  Padding: (Full: 4);

  Label #ProfessionName {
    Text: "";
    Anchor: (Height: 16);
    Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #95a5a6, RenderUppercase: true);
  }

  Label #XpGainText {
    Text: "";
    Anchor: (Height: 18);
    Style: (FontSize: 13, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #2ecc71, RenderBold: true);
  }
}

// Hidden elements (used internally by the system)
Label #LevelText { Text: ""; Anchor: (Width: 0, Height: 0); Style: (FontSize: 1, TextColor: #00000000); }
Label #ProgressText { Text: ""; Anchor: (Width: 0, Height: 0); Style: (FontSize: 1, TextColor: #00000000); }
// Legacy selectors for compatibility
Label #HungerLabel { Text: ""; Anchor: (Width: 0, Height: 0); Style: (FontSize: 1, TextColor: #00000000); }
Label #ThirstLabel { Text: ""; Anchor: (Width: 0, Height: 0); Style: (FontSize: 1, TextColor: #00000000); }
Label #EnergyLabel { Text: ""; Anchor: (Width: 0, Height: 0); Style: (FontSize: 1, TextColor: #00000000); }

// === Living Lands Panel (toggled by /ll main command) ===
