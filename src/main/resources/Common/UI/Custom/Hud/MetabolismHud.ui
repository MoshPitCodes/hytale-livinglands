Group {
  LayoutMode: Top;
  Anchor: (Top: 20, Left: 20, Width: 100);

  // Hunger stat
  Group #HungerStat {
    LayoutMode: Left;
    Anchor: (Height: 28, Bottom: 4);

    Group #HungerIcon {
      Background: (TexturePath: "food.png");
      Anchor: (Width: 24, Height: 24);
    }

    Label #HungerText {
      Text: "100";
      Anchor: (Width: 50, Height: 24, Left: 4);
      Style: (FontSize: 14, Alignment: Start, TextColor: #e67e22, RenderBold: true);
    }
  }

  // Thirst stat
  Group #ThirstStat {
    LayoutMode: Left;
    Anchor: (Height: 28, Bottom: 4);

    Group #ThirstIcon {
      Background: (TexturePath: "water.png");
      Anchor: (Width: 24, Height: 24);
    }

    Label #ThirstText {
      Text: "100";
      Anchor: (Width: 50, Height: 24, Left: 4);
      Style: (FontSize: 14, Alignment: Start, TextColor: #3498db, RenderBold: true);
    }
  }

  // Energy stat
  Group #EnergyStat {
    LayoutMode: Left;
    Anchor: (Height: 28, Bottom: 4);

    Group #EnergyIcon {
      Background: (TexturePath: "energy.png");
      Anchor: (Width: 24, Height: 24);
    }

    Label #EnergyText {
      Text: "100";
      Anchor: (Width: 50, Height: 24, Left: 4);
      Style: (FontSize: 14, Alignment: Start, TextColor: #f1c40f, RenderBold: true);
    }
  }
}
